{
  "custom": {
    "widgetInfo": {
      "category": "System Diagnostics",
      "defaultSize": {
        "columnSpan": 2,
        "rowSpan": 2
      },
      "isConfigurable": true,
      "minSize": {
        "columnSpan": 1,
        "rowSpan": 2
      },
      "name": "Disk Space Info",
      "viewParams": {
        "availableSpace": "SystemGateway/Performance/Available Disk Space (MB)",
        "utilization": "SystemGateway/Performance/Disk Utilization"
      },
      "viewPath": "Exchange/Staging/Widgets/Test"
    }
  },
  "params": {
    "availableSpace": "[System]Gateway/Performance/Available Disk Space (MB)",
    "configuring": false,
    "utilization": "[System]Gateway/Performance/Disk Utilization"
  },
  "propConfig": {
    "custom.widgetInfo": {
      "persistent": true
    },
    "params.availableSpace": {
      "paramDirection": "inout",
      "persistent": true
    },
    "params.configuring": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.utilization": {
      "paramDirection": "inout",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 360,
      "width": 360
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Label_0"
        },
        "position": {
          "shrink": 0
        },
        "props": {
          "style": {
            "background": "--div-15",
            "color": "--neutral-10",
            "fontSize": "1.2em",
            "fontWeight": "bold",
            "textAlign": "center"
          },
          "text": "Disk"
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "TextField"
        },
        "position": {
          "basis": "32px"
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "path": "view.params.configuring"
              },
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.availableSpace"
              },
              "type": "property"
            }
          }
        },
        "type": "ia.input.text-field"
      },
      {
        "meta": {
          "name": "TextField_0"
        },
        "position": {
          "basis": "32px"
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "path": "view.params.configuring"
              },
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.utilization"
              },
              "type": "property"
            }
          }
        },
        "type": "ia.input.text-field"
      },
      {
        "children": [
          {
            "meta": {
              "name": "CylindricalTank"
            },
            "position": {
              "height": 1,
              "width": 1
            },
            "propConfig": {
              "props.value": {
                "binding": {
                  "config": {
                    "fallbackDelay": 2.5,
                    "mode": "indirect",
                    "references": {
                      "utilization": "{view.params.utilization}"
                    },
                    "tagPath": "{utilization}"
                  },
                  "type": "tag"
                }
              }
            },
            "props": {
              "capacity": 1,
              "liquidColor": "--neutral-40",
              "liquidOpacity": 1,
              "liquidWarningColor": "--error",
              "strokeWidth": 1,
              "tankColor": "--neutral-30",
              "tankWarningColor": "--warning",
              "valueDisplay": {
                "unit": {
                  "enabled": true,
                  "value": " Utilization"
                }
              },
              "warningThreshold": 80
            },
            "type": "ia.display.cylindrical-tank"
          }
        ],
        "meta": {
          "name": "CoordinateContainer"
        },
        "position": {
          "basis": "160px",
          "grow": 1
        },
        "props": {
          "aspectRatio": "1:1",
          "mode": "percent"
        },
        "type": "ia.container.coord"
      },
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "shrink": 0
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "fallbackDelay": 2.5,
                "mode": "indirect",
                "references": {
                  "availableSpace": "{view.params.availableSpace}"
                },
                "tagPath": "{availableSpace}"
              },
              "transforms": [
                {
                  "expression": "\"Available Space: \" + numberFormat({value}/1024.0, \"0.0\") + \" GB\"",
                  "type": "expression"
                }
              ],
              "type": "tag"
            }
          }
        },
        "props": {
          "style": {
            "fontSize": "0.8em",
            "textAlign": "center"
          }
        },
        "type": "ia.display.label"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column",
      "style": {
        "background": "--neutral-20"
      }
    },
    "type": "ia.container.flex"
  }
}